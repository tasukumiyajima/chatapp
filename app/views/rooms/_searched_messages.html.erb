<% messages.includes([:room, :user]).each do |message| %>
  <div>
    チャットルーム名：
    <%= message.room.name%>
  </div>
  <div class="message <%= "self" if message.user_id == current_user.id %>" id="message-<%= message.id %>">
    <div class="message_user_name">
      <%= message.user.name %>：
      <%= message.created_at.strftime('%Y/%m/%d %H:%M') %>
    </div>
    <div class="message_content result">
      <%= simple_format(emojify(h message.content)) %>
    </div>
  </div>
<% end %>
