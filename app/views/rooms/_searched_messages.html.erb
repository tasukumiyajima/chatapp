<% messages.includes([:room, :user]).each do |message| %>
  <div class="searched-message">
    <div class="searched-room">
      チャットルーム名：<%= message.room.name%>
    </div>
    <li class="message <%= "self" if message.user_id == current_user.id %>" id="message-<%= message.id %>">
      <div class="message_user_name">
        <%= message.user.name %>：
        <%= message.created_at.strftime('%Y/%m/%d %H:%M') %>
      </div>
      <div class="message_content result">
        <%= simple_format(emojify(h message.content)) %>
      </div>
    </li>
  </div>
<% end %>
